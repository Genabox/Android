<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/mp3UrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:hint="Enter MP3 URL"
        android:translationY="-150dp" />

    <EditText
        android:id="@+id/alarmTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mp3UrlEditText"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:hint="Enter Alarm Time (HH:mm)"
        android:translationY="-150dp" />

    <EditText
        android:id="@+id/alarmIntervalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmTimeEditText"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:hint="Enter interval time (HH:mm:ss)"
        android:translationY="-150dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmTimeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Save Settings" />

    <Button
        android:id="@+id/startAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:enabled="true"
        android:text="Start Alarm" />

    <Button
        android:id="@+id/stopAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startAlarmButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="Stop Alarm" />

    <Button
        android:id="@+id/testAlarmButton"
        android:layout_width="134dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:enabled="true"
        android:text="Test alarm" />

    <Button
        android:id="@+id/hideButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopAlarmButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:enabled="true"
        android:onClick="hideApp"
        android:text="Hide app" />


</RelativeLayout>
